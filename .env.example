# Environment (development, production, test)
NODE_ENV=development

# Application
NEXT_PUBLIC_APP_NAME="Casper Ignite"

# Blockchain Network
# Options: "casper-test" for testnet, "casper-mainnet" for production
NEXT_PUBLIC_CHAIN_NAME="casper-test"

# Casper RPC Endpoints
# Testnet URLs (use these for development and testing)
CSPR_RPC_URL_PRIMARY="https://node.testnet.casper.network/rpc"
CSPR_RPC_URL_FALLBACK="https://node.testnet.casper.network/rpc"

# For production with mainnet, use:
# CSPR_RPC_URL_PRIMARY="https://node.casper-rpc.io/rpc"
# CSPR_RPC_URL_FALLBACK="https://node.casper-rpc.io/rpc"

# Database
# Local development: postgresql://user:password@localhost:5432/casper_radar
# Vercel Postgres: Will be provided by Vercel (includes ?sslmode=require)
# Neon/Supabase: Copy connection string from provider dashboard
DATABASE_URL="postgresql://user:password@localhost:5432/casper_radar"

# Redis Cache
# Local development: redis://localhost:6379
# Upstash (recommended for Vercel): rediss://username:password@host:port
# Production: Use Redis provider connection string
REDIS_URL="redis://localhost:6379"

# Security / Authentication
# IMPORTANT: Generate a strong secret for production!
# Run: openssl rand -base64 32
JWT_SECRET="change_me_to_a_strong_random_secret_min_32_chars"

# Email (optional - for future notifications)
SMTP_URL="smtp://user:pass@smtp.server:587"

# Platform Addresses (Testnet)
# IMPORTANT: Replace these with your actual testnet wallet addresses
# Platform fee (20 CSPR) goes here
PLATFORM_FEE_ADDRESS="0202a0c94e3f2e9e9f8c0a0a8f8e9d8c7b6a5b4c3d2e1f0a0b1c2d3e4f5a6b7c8d9e"
# Liquidity pool (180 CSPR) goes here
LIQUIDITY_POOL_ADDRESS="0203b1d05f4g3h2i1j0k9l8m7n6o5p4q3r2s1t0u9v8w7x6y5z4a3b2c1d0e9f8g7h"

# Platform token wallet (holds project tokens for buy/sell)
# This wallet must hold all project tokens for the bonding curve trading
PLATFORM_TOKEN_WALLET_ADDRESS="0204c2e15g5h4i3j2k1l0m9n8o7p6q5r4s3t2u1v0w9x8y7z6a5b4c3d2e1f0g9h8"
# Private key for platform token wallet (for signing token transfers)
# PLATFORM_TOKEN_WALLET_PRIVATE_KEY_HEX="hex_key_without_0x"
# PLATFORM_TOKEN_WALLET_KEY_ALGO="ed25519" # or "secp256k1"

# For production/mainnet, use different addresses:
# PLATFORM_FEE_ADDRESS="your_mainnet_platform_wallet"
# LIQUIDITY_POOL_ADDRESS="your_mainnet_liquidity_wallet"
# PLATFORM_TOKEN_WALLET_ADDRESS="your_mainnet_token_wallet"

# CEP-18 WASM integrity (optional but recommended)
# SHA-256 of public/contracts/cep18.wasm (v1.2.0): 9219c421c0534d5a2cdab5154953e469b71c40789d2669fe213f591bc7e4113c
CEP18_WASM_SHA256="9219c421c0534d5a2cdab5154953e469b71c40789d2669fe213f591bc7e4113c"

# Deployer key for server-side token deployments (configure one of these)
# CSPR_DEPLOYER_PRIVATE_KEY_PEM="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----"
# CSPR_DEPLOYER_PRIVATE_KEY_HEX="hex_key_without_0x"
# CSPR_DEPLOYER_KEY_ALGO="ed25519" # or "secp256k1" if using that curve
